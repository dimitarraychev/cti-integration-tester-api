{
  "compilerOptions": {
    "target": "ES2020", // Or a suitable ES version
    "module": "ESNext", // This tells TS to output ES module syntax (import/export)
    "moduleResolution": "node",
    "outDir": "./dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
